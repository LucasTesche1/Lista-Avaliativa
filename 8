#include <stdio.h>

int main(){
	
	int num, maiorNumero=0, menorNumero;
	
	printf("-------------------------------\n");
	printf("MAIOR E MENOR\n");
	printf("-------------------------------\n");
	
	do{
		
		printf("Digite um numero: ");
		scanf("%d",&num);
		
		if (num < menorNumero && num >= 0){
			menorNumero=num;
		}
		
		if (num > maiorNumero){
			maiorNumero=num;
		}
		
	}
	while(num>0);
	
	printf("--------------------------------");
	
	if (num<0){
		
		printf("\nO menor numero e: %d",menorNumero);
		printf("\nO maior numero e: %d",maiorNumero);
	}	
		
	
	
	return 0;	
	}
	
